@model Break_Bulk_System.ViewModels.ChartererUploadViewModel

@{
    ViewData["Title"] = "Upload Charterers CSV";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Upload Charterers CSV</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Upload CSV File</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> CSV Format Requirements</h6>
                            <ul class="mb-0">
                                <li>File must be in CSV format with headers: <code>Key Code,Description,Long Description</code></li>
                                <li>Key Code: Maximum 6 characters</li>
                                <li>Description: Maximum 50 characters</li>
                                <li>Long Description: Maximum 100 characters</li>
                                <li>Existing charterers will be completely replaced</li>
                            </ul>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CsvFile" class="form-label fw-bold">CSV File</label>
                            <input asp-for="CsvFile" type="file" class="form-control" accept=".csv" />
                            <span asp-validation-for="CsvFile" class="text-danger"></span>
                            <div class="form-text">Select a CSV file containing charterer data.</div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> Uploading a new CSV file will replace all existing charterers.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload"></i> Upload and Replace All
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Sample CSV Format</h5>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 small">Key Code,Description,Long Description
00,PALTRACK,PALTRACK TESTING
MAEU,Maersk,Maersk Line
MSC,MSC,Mediterranean Shipping Company
...</pre>
                    <p class="small text-muted">
                        Download the provided CSV file and use it as a template for your data.
                    </p>
                    <a href="#" class="btn btn-outline-primary btn-sm" id="downloadTemplate">
                        <i class="fas fa-download"></i> Download Template
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('downloadTemplate').addEventListener('click', function(e) {
            e.preventDefault();

            const csvContent = "Key Code,Description,Long Description\n00,PALTRACK,PALTRACK TESTING\nMAEU,Maersk,Maersk Line\nMSC,MSC,Mediterranean Shipping Company";
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.setAttribute('hidden', '');
            a.setAttribute('href', url);
            a.setAttribute('download', 'charterers_template.csv');
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        });
    </script>
}