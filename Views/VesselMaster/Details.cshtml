@model Break_Bulk_System.Models.VesselMaster

@{
    ViewData["Title"] = "Vessel Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Vessel Master</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h2 class="text-primary">
                <i class="fas fa-ship me-2"></i>Vessel Details
            </h2>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.VesselCode" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>
                @Model.VesselCode - @Model.VesselName
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Basic Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-info me-2"></i>Basic Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Vessel Code:</dt>
                                <dd class="col-sm-8">@Model.VesselCode</dd>

                                <dt class="col-sm-4">Vessel Name:</dt>
                                <dd class="col-sm-8">@Model.VesselName</dd>

                                <dt class="col-sm-4">Vessel Type:</dt>
                                <dd class="col-sm-8">@Model.VesselTypeCode</dd>

                                <dt class="col-sm-4">Shipping Line:</dt>
                                <dd class="col-sm-8">@Model.ShippingLineCode</dd>

                                <dt class="col-sm-4">IMP/EXP:</dt>
                                <dd class="col-sm-8">@Model.ImpExp</dd>

                                <dt class="col-sm-4">Voyage Number:</dt>
                                <dd class="col-sm-8">@Model.VoyageNumber</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Schedule Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-calendar me-2"></i>Schedule Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Loading Berth:</dt>
                                <dd class="col-sm-8">@Model.LoadingBerth</dd>

                                <dt class="col-sm-4">Loading Date:</dt>
                                <dd class="col-sm-8">@Model.LoadingDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Loading Time:</dt>
                                <dd class="col-sm-8">@Model.LoadingTime?.ToString(@"hh\:mm")</dd>

                                <dt class="col-sm-4">Arrival Date:</dt>
                                <dd class="col-sm-8">@Model.ArrivalDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Arrival Time:</dt>
                                <dd class="col-sm-8">@Model.ArrivalTime?.ToString(@"hh\:mm")</dd>

                                <dt class="col-sm-4">Sail Date:</dt>
                                <dd class="col-sm-8">@Model.SailDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Sail Time:</dt>
                                <dd class="col-sm-8">@Model.SailTime?.ToString(@"hh\:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Additional Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Additional Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Bill No:</dt>
                                <dd class="col-sm-8">@Model.BillNo</dd>

                                <dt class="col-sm-4">Call Sign:</dt>
                                <dd class="col-sm-8">@Model.CallSign</dd>

                                <dt class="col-sm-4">Charterer:</dt>
                                <dd class="col-sm-8">@Model.Charterer</dd>

                                <dt class="col-sm-4">VPM:</dt>
                                <dd class="col-sm-8">@Model.VPM</dd>

                                <dt class="col-sm-4">Stock Completed:</dt>
                                <dd class="col-sm-8">@Model.StockCompleted</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- System Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-database me-2"></i>System Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Created Date:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("dd-MMM-yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Modified Date:</dt>
                                <dd class="col-sm-8">@(Model.ModifiedDate?.ToString("dd-MMM-yyyy HH:mm") ?? "Never")</dd>

                                <dt class="col-sm-4">Storage Date:</dt>
                                <dd class="col-sm-8">@Model.StorageDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">Active</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Last updated: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm")</small>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.VesselCode" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit Vessel
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.VesselCode" class="btn btn-danger btn-sm ms-2">
                        <i class="fas fa-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>