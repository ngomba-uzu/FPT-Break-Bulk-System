@model Break_Bulk_System.Models.VesselMaster

@{
    ViewData["Title"] = "Delete Vessel";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Vessel Master</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.VesselCode">Details</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
            <h2 class="text-danger">
                <i class="fas fa-trash me-2"></i>Delete Vessel
            </h2>
        </div>
        <div class="col-auto">
            <a asp-action="Details" asp-route-id="@Model.VesselCode" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Details
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Confirm Deletion
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-warning me-2"></i>Warning!
                </h5>
                <p class="mb-0">
                    You are about to permanently delete this vessel. This action cannot be undone.
                    All associated manifests and data will also be removed.
                </p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-info me-2"></i>Vessel Details</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Vessel Code:</dt>
                                <dd class="col-sm-8">@Model.VesselCode</dd>

                                <dt class="col-sm-4">Vessel Name:</dt>
                                <dd class="col-sm-8">@Model.VesselName</dd>

                                <dt class="col-sm-4">Vessel Type:</dt>
                                <dd class="col-sm-8">@Model.VesselTypeCode</dd>

                                <dt class="col-sm-4">Shipping Line:</dt>
                                <dd class="col-sm-8">@Model.ShippingLineCode</dd>

                                <dt class="col-sm-4">Voyage Number:</dt>
                                <dd class="col-sm-8">@Model.VoyageNumber</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-calendar me-2"></i>Schedule Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Loading Berth:</dt>
                                <dd class="col-sm-8">@Model.LoadingBerth</dd>

                                <dt class="col-sm-4">Loading Date:</dt>
                                <dd class="col-sm-8">@Model.LoadingDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Arrival Date:</dt>
                                <dd class="col-sm-8">@Model.ArrivalDate?.ToString("dd-MMM-yyyy")</dd>

                                <dt class="col-sm-4">Sail Date:</dt>
                                <dd class="col-sm-8">@Model.SailDate?.ToString("dd-MMM-yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <h6 class="alert-heading">
                    <i class="fas fa-info-circle me-2"></i>Please confirm deletion by typing the vessel code below:
                </h6>
                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="VesselCode" />

                    <div class="form-group mb-3">
                        <label for="confirmationCode" class="form-label fw-bold">
                            Type "<strong>@Model.VesselCode</strong>" to confirm:
                        </label>
                        <input type="text" class="form-control" id="confirmationCode" name="confirmationCode" 
                               required oninput="toggleDeleteButton()" />
                    </div>

                    <div class="form-group">
                        <button type="submit" id="deleteButton" class="btn btn-danger me-2" disabled>
                            <i class="fas fa-trash me-1"></i>Permanently Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.VesselCode" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            function toggleDeleteButton() {
                const confirmationCode = document.getElementById('confirmationCode').value;
                const deleteButton = document.getElementById('deleteButton');
                const vesselCode = '@Model.VesselCode';

                deleteButton.disabled = confirmationCode !== vesselCode;
            }
        </script>
}