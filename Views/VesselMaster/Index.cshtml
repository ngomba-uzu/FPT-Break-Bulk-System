@model IEnumerable<Break_Bulk_System.Models.VesselMaster>

@{
    ViewData["Title"] = "Vessel Master";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Vessel Master</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Vessel Code</th>
                        <th>Vessel Name</th>
                        <th>Vessel Type</th>
                        <th>Loading Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VesselCode</td>
                            <td>@item.VesselName</td>
                            <td>@item.VesselType</td>
                            <td>@item.LoadingDate?.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.VesselCode" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.VesselCode" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.VesselCode" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>