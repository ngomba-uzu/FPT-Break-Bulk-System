@model Break_Bulk_System.ViewModels.VesselMasterViewModel

@{
    ViewData["Title"] = "Edit Vessel";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Vessel Master</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.VesselMaster.VesselCode">Details</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
            <h2 class="text-primary">
                <i class="fas fa-edit me-2"></i>Edit Vessel
            </h2>
        </div>
        <div class="col-auto">
            <a asp-action="Details" asp-route-id="@Model.VesselMaster.VesselCode" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>Cancel
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h5 class="mb-0">
                <i class="fas fa-ship me-2"></i>
                Editing: @Model.VesselMaster.VesselCode - @Model.VesselMaster.VesselName
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="VesselMaster.VesselCode" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-info me-2"></i>Basic Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.VesselCode" class="form-label fw-bold">Vessel Code</label>
                                    <input asp-for="VesselMaster.VesselCode" class="form-control" readonly />
                                    <span asp-validation-for="VesselMaster.VesselCode" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.VesselName" class="form-label fw-bold">Vessel Name *</label>
                                    <input asp-for="VesselMaster.VesselName" class="form-control" maxlength="26" />
                                    <span asp-validation-for="VesselMaster.VesselName" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.VesselTypeCode" class="form-label fw-bold">Vessel Type</label>
                                    <select asp-for="VesselMaster.VesselTypeCode" class="form-control">
                                        <option value="">-- Select Vessel Type --</option>
                                        @foreach (var type in Model.VesselTypes)
                                        {
                                            <option value="@type.Code">@type.Code - @type.Description</option>
                                        }
                                    </select>
                                    <span asp-validation-for="VesselMaster.VesselTypeCode" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.ShippingLineCode" class="form-label fw-bold">Shipping Line</label>
                                    <select asp-for="VesselMaster.ShippingLineCode" class="form-control">
                                        <option value="">-- Select Shipping Line --</option>
                                        @foreach (var line in Model.ShippingLines)
                                        {
                                            <option value="@line.Code">@line.Code - @line.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="VesselMaster.ShippingLineCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-calendar me-2"></i>Schedule Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.LoadingBerth" class="form-label fw-bold">Loading Berth</label>
                                    <input asp-for="VesselMaster.LoadingBerth" class="form-control" maxlength="2" />
                                    <span asp-validation-for="VesselMaster.LoadingBerth" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.LoadingDate" class="form-label fw-bold">Loading Date</label>
                                    <input asp-for="VesselMaster.LoadingDate" type="date" class="form-control" />
                                    <span asp-validation-for="VesselMaster.LoadingDate" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.LoadingTime" class="form-label fw-bold">Loading Time</label>
                                    <input asp-for="VesselMaster.LoadingTime" type="time" class="form-control" />
                                    <span asp-validation-for="VesselMaster.LoadingTime" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.ArrivalDate" class="form-label fw-bold">Arrival Date</label>
                                    <input asp-for="VesselMaster.ArrivalDate" type="date" class="form-control" />
                                    <span asp-validation-for="VesselMaster.ArrivalDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Additional Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.ImpExp" class="form-label fw-bold">IMP/EXP</label>
                                    <input asp-for="VesselMaster.ImpExp" class="form-control" maxlength="3" />
                                    <span asp-validation-for="VesselMaster.ImpExp" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.VoyageNumber" class="form-label fw-bold">Voyage Number</label>
                                    <input asp-for="VesselMaster.VoyageNumber" class="form-control" maxlength="12" />
                                    <span asp-validation-for="VesselMaster.VoyageNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.CallSign" class="form-label fw-bold">Call Sign</label>
                                    <input asp-for="VesselMaster.CallSign" class="form-control" maxlength="8" />
                                    <span asp-validation-for="VesselMaster.CallSign" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.Charterer" class="form-label fw-bold">Charterer</label>
                                    <input asp-for="VesselMaster.Charterer" class="form-control" maxlength="6" />
                                    <span asp-validation-for="VesselMaster.Charterer" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Other Details</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.VPM" class="form-label fw-bold">VPM</label>
                                    <input asp-for="VesselMaster.VPM" class="form-control" maxlength="8" />
                                    <span asp-validation-for="VesselMaster.VPM" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.BillNo" class="form-label fw-bold">Bill No</label>
                                    <input asp-for="VesselMaster.BillNo" class="form-control" maxlength="26" />
                                    <span asp-validation-for="VesselMaster.BillNo" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.StockCompleted" class="form-label fw-bold">Stock Completed</label>
                                    <input asp-for="VesselMaster.StockCompleted" class="form-control" maxlength="1" />
                                    <span asp-validation-for="VesselMaster.StockCompleted" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="VesselMaster.StorageDate" class="form-label fw-bold">Storage Date</label>
                                    <input asp-for="VesselMaster.StorageDate" type="date" class="form-control" />
                                    <span asp-validation-for="VesselMaster.StorageDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-save me-1"></i>Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.VesselMaster.VesselCode" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}