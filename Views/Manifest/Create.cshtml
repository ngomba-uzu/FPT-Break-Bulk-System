@model Break_Bulk_System.ViewModels.ManifestViewModel

@{
    ViewData["Title"] = "Create Manifest";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Create Manifest</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5>Manifest Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Manifest.VesselCode" class="control-label fw-bold"></label>
                            <select asp-for="Manifest.VesselCode" class="form-control" required>
                                <option value="">-- Select Vessel --</option>
                                @foreach (var vessel in Model.Vessels)
                                {
                                    <option value="@vessel.VesselCode">@vessel.VesselCode - @vessel.VesselName</option>
                                }
                            </select>
                            <span asp-validation-for="Manifest.VesselCode" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.BillNo" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.BillNo" class="form-control" maxlength="26" />
                            <span asp-validation-for="Manifest.BillNo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Mark" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Mark" class="form-control" maxlength="20" />
                            <span asp-validation-for="Manifest.Mark" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.PackKg" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.PackKg" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Manifest.PackKg" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Mark2" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Mark2" class="form-control" maxlength="20" />
                            <span asp-validation-for="Manifest.Mark2" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Mark3" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Mark3" class="form-control" maxlength="20" />
                            <span asp-validation-for="Manifest.Mark3" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.LdPort" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.LdPort" class="form-control" maxlength="15" />
                            <span asp-validation-for="Manifest.LdPort" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.ExpectedQty" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.ExpectedQty" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Manifest.ExpectedQty" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Description" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Description" class="form-control" maxlength="20" />
                            <span asp-validation-for="Manifest.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.NetWeightKg" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.NetWeightKg" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Manifest.NetWeightKg" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.GrossUnitKg" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.GrossUnitKg" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Manifest.GrossUnitKg" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Location" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Location" class="form-control" maxlength="20" />
                            <span asp-validation-for="Manifest.Location" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.LOrderComp" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.LOrderComp" class="form-control" maxlength="1" />
                            <span asp-validation-for="Manifest.LOrderComp" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.CargoType" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.CargoType" class="form-control" maxlength="3" />
                            <span asp-validation-for="Manifest.CargoType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Commodity" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Commodity" class="form-control" maxlength="6" />
                            <span asp-validation-for="Manifest.Commodity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.SubCommodity" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.SubCommodity" class="form-control" maxlength="6" />
                            <span asp-validation-for="Manifest.SubCommodity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Customer" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Customer" class="form-control" maxlength="6" />
                            <span asp-validation-for="Manifest.Customer" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.ImpExp" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.ImpExp" class="form-control" maxlength="1" />
                            <span asp-validation-for="Manifest.ImpExp" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.Transhipment" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.Transhipment" class="form-control" maxlength="1" />
                            <span asp-validation-for="Manifest.Transhipment" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.HandlingAccount" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.HandlingAccount" class="form-control" maxlength="26" />
                            <span asp-validation-for="Manifest.HandlingAccount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Manifest.StorageAccount" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.StorageAccount" class="form-control" maxlength="26" />
                            <span asp-validation-for="Manifest.StorageAccount" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.ExclWEnd" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.ExclWEnd" class="form-control" maxlength="1" />
                            <span asp-validation-for="Manifest.ExclWEnd" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Manifest.ExPRBC" class="control-label fw-bold"></label>
                            <input asp-for="Manifest.ExPRBC" class="form-control" maxlength="6" />
                            <span asp-validation-for="Manifest.ExPRBC" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}