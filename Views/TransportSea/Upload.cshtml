@model Break_Bulk_System.ViewModels.TransportSeaUploadViewModel

@{
    ViewData["Title"] = "Upload Call Signs CSV";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Upload Call Signs CSV</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Main Menu</a>
            <a asp-action="Index" class="btn btn-info ms-2">View All Call Signs</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Upload CSV File</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> CSV Format Requirements</h6>
                            <ul class="mb-0">
                                <li>File must be in CSV format with headers: <code>TransportID,Name,CarrierCode,CarrierName</code></li>
                                <li>TransportID: Maximum 10 characters (Call Sign)</li>
                                <li>Name: Maximum 100 characters (Vessel Name)</li>
                                <li>CarrierCode: Maximum 10 characters</li>
                                <li>CarrierName: Maximum 100 characters</li>
                                <li>Existing call signs will be completely replaced</li>
                            </ul>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CsvFile" class="form-label fw-bold">CSV File</label>
                            <input asp-for="CsvFile" type="file" class="form-control" accept=".csv" required />
                            <span asp-validation-for="CsvFile" class="text-danger"></span>
                            <div class="form-text">Select a CSV file containing call sign data.</div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> Uploading a new CSV file will replace all existing call signs.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload"></i> Upload and Replace All
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Current Status</h5>
                </div>
                <div class="card-body">
                    @{
                        var callSignCount = ViewBag.CallSignCount ?? 0;
                    }
                    <div class="text-center">
                        <h3 class="text-primary">@callSignCount</h3>
                        <p class="mb-3">Call Signs in Database</p>

                        @if (callSignCount > 0)
                        {
                            <form asp-action="DeleteAll" method="post" onsubmit="return confirm('Are you sure you want to delete ALL call signs? This action cannot be undone.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Delete All Call Signs</button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6>Sample CSV Format</h6>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 small">TransportID,Name,CarrierCode,CarrierName
VRLO2,Hong Kong Spirit,VLPI,VL8 Pool Inc
V7UI3,Athanassions Go,JGMP,Jera Global Markets
CQZS,Hermine Oldendorff,OCA,Oldendorff Carriers
...</pre>
                    <p class="small text-muted">
                        Download the provided CSV file and use it as a template for your data.
                    </p>
                    <a href="#" class="btn btn-outline-primary btn-sm" id="downloadTemplate">
                        <i class="fas fa-download"></i> Download Template
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
                document.getElementById('downloadTemplate').addEventListener('click', function(e) {
                    e.preventDefault();

                    const csvContent = `TransportID,Name,CarrierCode,CarrierName
        VRLO2,Hong Kong Spirit,VLPI,VL8 Pool Inc
        V7UI3,Athanassions Go,JGMP,Jera Global Markets
        CQZS,Hermine Oldendorff,OCA,Oldendorff Carriers
        ICRV,Marlene Damato,AVNR,Avani Resources Pte Ltd`;

                    const blob = new Blob([csvContent], { type: 'text/csv' });
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.setAttribute('hidden', '');
                    a.setAttribute('href', url);
                    a.setAttribute('download', 'call_signs_template.csv');
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                });
    </script>
}